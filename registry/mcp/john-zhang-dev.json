{
  "skills": {
    "john-zhang-dev-xero-mcp-server": {
      "name": "Xero",
      "source": "github:john-zhang-dev/xero-mcp",
      "description": "Enabling clients to interact with Xero system for streamlined accounting, invoicing, and business operations.",
      "tags": [
        "mcp",
        "Finance"
      ],
      "versions": {
        "latest": "main"
      },
      "mcp_servers": [
        {
          "name": "@john-zhang-dev/xero-mcp-server-npm",
          "command": "npx",
          "args": [
            "-y",
            "xero-mcp@latest"
          ],
          "env": {
            "XERO_CLIENT_ID": "${XERO_CLIENT_ID}",
            "XERO_CLIENT_SECRET": "${XERO_CLIENT_SECRET}",
            "XERO_REDIRECT_URI": "${XERO_REDIRECT_URI}"
          }
        }
      ]
    }
  }
}
