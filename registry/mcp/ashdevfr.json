{
  "skills": {
    "discourse": {
      "name": "Discourse",
      "source": "github:AshDevFr/discourse-mcp-server",
      "description": "A MCP server to search Discourse posts on a Discourse forum.",
      "tags": [
        "mcp",
        "discourse",
        "search",
        "Web Services"
      ],
      "versions": {
        "latest": "main"
      },
      "mcp_servers": [
        {
          "name": "discourse-npm",
          "command": "npx",
          "args": [
            "-y",
            "@ashdev/discourse-mcp-server"
          ],
          "env": {
            "DISCOURSE_API_URL": "${DISCOURSE_API_URL}",
            "DISCOURSE_API_KEY": "${DISCOURSE_API_KEY}",
            "DISCOURSE_API_USERNAME": "${DISCOURSE_API_USERNAME}"
          }
        },
        {
          "name": "discourse-docker",
          "command": "docker",
          "args": [
            "run",
            "-i",
            "--rm",
            "-e",
            "DISCOURSE_API_URL=${DISCOURSE_API_URL}",
            "-e",
            "DISCOURSE_API_KEY=${DISCOURSE_API_KEY}",
            "-e",
            "DISCOURSE_API_USERNAME=${DISCOURSE_API_USERNAME}",
            "ashdev/discourse-mcp-server"
          ],
          "env": {}
        }
      ]
    }
  }
}
