        "Dev Tools"
      ],
      "versions": {
        "latest": "main"
      },
      "mcp_servers": [
        {
          "name": "kubectl-mcp-python",
          "command": "python",
          "args": [
            "-m",
            "kubectl_mcp_tool.minimal_wrapper"
          ],
